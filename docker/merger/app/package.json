{
  "name": "merger",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "merge": "swagger-merger -i src/openapi.yml -o /openapi/openapi.yml",
    "watch": "npm-watch"
  },
  "watch": {
    "merge": {
      "patterns": [
        "src"
      ],
      "extensions": "yml"
    }
  },
  "devDependencies": {
    "npm-watch": "^0.12.0",
    "swagger-merger": "1.5.4",
    "watch": "0.13.0"
  }
}
